@model IEnumerable<ContosoUniversity.Models.ServiceRequest>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<h2>Service Name</h2>

<p>
    @Html.ActionLink("Create New", "Create", "ServiceRequest", null, new { @class = "btn btn-primary" })
</p>

<div class="table-responsive">
    <table class="table table-hover">
        <tr>
            <th>
                Service Name
            </th>
            <th>
                Visible
            </th>
            <th>

            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsVisible)
                </td>
                <td class="text-right">
                    @Html.ActionLink("Edit", "Edit", new { id = item.ServiceRequestId }, new { @class = "btn btn-xs btn-warning" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.ServiceRequestId }, new { @class = "btn btn-xs btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>